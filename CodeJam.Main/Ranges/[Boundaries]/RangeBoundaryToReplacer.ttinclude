<#@ import namespace="System.IO" #>
<#@ include file="$(SolutionDir)T4.Reusable\Autogenerated.ttinclude" #>
<#@ include file="$(SolutionDir)T4.Reusable\Transform.ttinclude" #><#+
	// ReSharper disable UnusedMember.Local
	private void Run(params ReplaceInfo[] additionalReplaces)
	{
		var newClassName = Path.GetFileNameWithoutExtension(Host.TemplateFile);
		var oldClassName = newClassName?.Replace("To", "From");

		Transform(
			oldClassName + ".cs",
			additionalReplaces,
			new ReplaceInfo // Swap From <> To words
			{
				Pattern = "From",
				Replacement = "To",
				ThrowOnFail = false,
				WholeWord = true,
				Mode = ReplaceMode.Swap
			},
			new ReplaceInfo // Swap BoundaryFrom <> BoundaryTo
			{
				Pattern = "BoundaryFrom",
				Replacement = "BoundaryTo",
				ThrowOnFail = true,
				WholeWord = false,
				Mode = ReplaceMode.Swap
			},
			new ReplaceInfo // Swap Negative <> Negative
			{
				Pattern = "Negative",
				Replacement = "Positive",
				ThrowOnFail = false,
				WholeWord = false,
				Mode = ReplaceMode.Swap
			},
			new ReplaceInfo // Swap negative <> positive
			{
				Pattern = "negative",
				Replacement = "positive",
				ThrowOnFail = false,
				WholeWord = false,
				Mode = ReplaceMode.Swap
			},
			new ReplaceInfo // Swap -∞ <> +∞
			{
				Pattern = "-∞",
				Replacement = "+∞",
				ThrowOnFail = false,
				WholeWord = false,
				Mode = ReplaceMode.Swap
			});
	}
#>
